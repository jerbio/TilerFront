@Scripts.Render("~/Content/RegistrationJS")
@Styles.Render("~/Content/RegistrationCss")



<!--<script src="Scripts/RegisterIni.js"></script>-->
<div id="regSignPageContainer">
    <div id="radialBground"></div>
    <div class="RegLogoContainer">
        <span id="BigBackGroundText">Tiler</span>
        <div id="LogoContainer" class="WagTapLogo"></div>
    </div>
    <div id="regSignFormContainer">
        <div id="SignInFormContainer" class="regSignInFormContainer">
            <div id="SignInInputContainer">
                <input id="UserNameSignin" name="UserName" type="text" placeholder="Username" class="SignRegInput" />
                <input id="PasswordSignin" name="Password" type="password" placeholder="Password" class="SignRegInput" />
            </div>
            <div id="RegPageFormContainer" class="regSignInFormContainer">
                <div id="PasswordInstruction" class="setAsDisplayNone">
                    <div>Password</div>
                    <div id="passwordMinLength" class="setAsDisplayNone"> - needs to be at least 6 characters</div>
                    <div id="passwordNeedsUpperCase" class="setAsDisplayNone"> - needs to include an upper case character</div>
                    <div id="passwordNeedsLowerCase" class="setAsDisplayNone"> - needs to include a lower case character</div>
                    <div id="passwordNeedsNumber" class="setAsDisplayNone"> - needs to include at least a number</div>
                </div>
                <div id="PasswordRegistrationInputContainer">
                    <div id="ConfirmPasswordReginContainer">
                        <span id="PassWordConfirmErrorContainer" class="regformError"></span>
                        <input id="ConfirmPasswordRegin" name="ConfirmPasswordReg" type="password" placeholder="Verify Password" class="SignRegInput" />
                    </div>

                    <input id="FullNameRegin" name="FullNameReg" type="text" placeholder="Your Name" class="SignRegInput" />

                    <div id="EmailReginContainer">
                        <span id="EmailError" class="regformError"></span>
                        <input id="EmailRegin" name="UserNameReg" type="text" placeholder="Email" class="SignRegInput" />
                    </div>
                </div>
                
            </div>
            <span id="FormSubmissionError" class="regformError">Please Check your registration credentials</span>
            <div id="SignButtonContainer">
                <span id="SignInError" class="regformError"></span>
                <div id="SignInAndSocialContainer">
                    <button id="SignInButton">Sign In</button>
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword","Account")
                    </p>
                    @{
                        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
                        if (loginProviders.Count() != 0)
                        {
                            <form id="SocialLogin" action="/Account/ExternalLogin" method="post">
                                @Html.AntiForgeryToken()
                                <div id="socialLoginList">
                                    <p>
                                        @foreach (AuthenticationDescription p in loginProviders)
                                        {
                                            <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </div>
                <button id="gotToRegisterScreenButton">Register</button>
                <script>
                    if (DisableRegistration)
                    {
                        var RegistrationButton = document.getElementById("gotToRegisterScreenButton");
                        RegistrationButton.style.display = "none";
                    }
                </script>
            </div>
        </div>
    </div>

    
</div>
